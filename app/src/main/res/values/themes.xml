<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppDarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="NumberButton">@style/NumberButtonDark</item>
        <item name="TextForm">@style/TextFormDark</item>
        <item name="ThemeButton">@style/ThemeButtonDark</item>
    </style>

    <style name="AppLightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="NumberButton">@style/NumberButtonLight</item>
        <item name="TextForm">@style/TextFormLight</item>
        <item name="ThemeButton">@style/ThemeButtonLight</item>
    </style>
</resources>