<resources>

    <style name="OperationButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/marginRight</item>
        <item name="android:layout_marginTop">@dimen/marginRight</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_span">1</item>
    </style>

    <style name="NumberButtonDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/marginRight</item>
        <item name="android:layout_marginTop">@dimen/marginRight</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_span">1</item>
    </style>

    <style name="NumberButtonLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/marginRight</item>
        <item name="android:layout_marginTop">@dimen/marginRight</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_span">1</item>
    </style>

    <style name="TableRow" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">20</item>
    </style>

    <style name="TextFormDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

    <style name="TextFormLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

    <style name="ThemeButtonLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/ic_brightness_6_black_24dp</item>
        <item name="android:layout_column">3</item>
        <item name="android:layout_span">1</item>
    </style>

    <style name="ThemeButtonDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/ic_brightness_6_white_24dp</item>
        <item name="android:layout_column">3</item>
        <item name="android:layout_span">1</item>
    </style>

</resources>
